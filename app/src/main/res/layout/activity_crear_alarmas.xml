<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_crear_alarmas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="grupoasimov.pastillero.controladores.CrearAlarmas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:text="INTRODUCIR ALARMA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="17dp" />

            <TextView
                android:text="MEDICINA DE LA ALARMA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />

            <TextView
                android:text="MEDICINA X"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ca_nombre_medicina"
                android:textColor="@android:color/background_dark" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:text="DIAS DE LA SEMANA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView12" />

            <CheckBox
                android:text="LUNES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ca_lunes"
                android:checked="true" />

            <CheckBox
                android:text="MARTES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ca_martes" />

            <CheckBox
                android:text="MIERCOLES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ca_miercoles" />

            <CheckBox
                android:text="JUEVES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ca_jueves" />

            <CheckBox
                android:text="VIERNES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ca_viernes" />

            <CheckBox
                android:text="SABADO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ca_sabado" />

            <CheckBox
                android:text="DOMINGO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ca_domingo" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:text="HORAS DEL DIA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView13" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ca_lista_horas">

                    <TimePicker
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ca_hora" />

                    <Button
                        android:text="NUEVA HORA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ca_nueva_hora"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>
            </ScrollView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:text="CANTIDAD TOMA (En mg)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView16" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/ca_porcion"
                android:text="30"
                android:selectAllOnFocus="true" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:text="NOTA SOBRE LA ALARMA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView15" />

            <EditText
                android:layout_width="match_parent"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/ca_nota"
                android:layout_weight="0.16"
                android:layout_height="150dp"
                android:text="Apuntes sobre la alarma"
                android:selectAllOnFocus="true"
                android:singleLine="false" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <Button
                android:text="GUARDAR ALARMA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ca_guardar" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
